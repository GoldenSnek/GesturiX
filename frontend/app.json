{
  "expo": {
    "name": "GesturiX",
    "slug": "frontend",
    "version": "1.0.0",
    "owner": "gesturix",
    "orientation": "portrait",
    "icon": "./assets/images/GesturiX-icon.png",
    "scheme": "frontend",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "GesturiX needs access to your camera to translate sign language in real-time."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/GesturiX-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": ["android.permission.CAMERA"],
      "package": "com.goldenavsss.GesturiX"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/GesturiX-icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/GesturiX-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-font",
       "expo-av",
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "GesturiX needs access to your camera to translate sign language in real-time.",
          "enableMicrophonePermission": false
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "aef72738-c19d-46b3-b41e-4b65f194bf27"
      }
    }
  }
}
